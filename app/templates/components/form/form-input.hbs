<div class="field-label is-normal">
  <label class="label" for="input-{{name}}-{{element.id}}">{{label}}</label>
</div>

<div class="field-body">
  <div class="field">
    <div class="control">
      <input type={{inputType}} class="input {{if hasError "is-danger"}} {{if isValid "is-success"}}" id="input-{{name}}-{{element.id}}" name={{name}} placeholder={{placeholder}} value={{changeset-get changeset name}} onchange={{action (changeset-set changeset name) value="target.value"}} disabled={{disabled}}>
    </div>

    {{#if hasError}}
      <div class="help is-danger">{{errorMessage}}</div>
    {{/if}}

    {{#if isValid}}
      <div class="help is-success">V pořádku!</div>
    {{/if}}
  </div>
</div>
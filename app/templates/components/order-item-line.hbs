{{#if orderItem}}
  <span class="row align-items-center">
    <span class="col-12 col-md-8">
      <strong class="d-block d-md-none">{{ orderItem.quantity }} &times; {{ orderItem.title }}</strong>
      <span class="d-none d-md-block">{{ orderItem.quantity }} &times; {{ orderItem.title }}</span>
    </span>
    <span class="col-md-2 text-right d-none d-md-block">{{ orderItem.formattedTotalPrice }}</span>
    <span class="col-12 col-md-2 text-right clearfix">
      <span class="d-block d-md-none float-left">Cena: {{ orderItem.formattedTotalPrice }}</span>

      <button class="order-item-line__action-button js-add-to-cart-button" {{action "addToCart" on="click"}}>
        <i class="far fa-plus-circle"></i>
      </button>

      <button class="order-item-line__action-button js-remove-from-cart-button" {{action "removeFromCart" on="click" bubbles=false}}>
        <i class="far fa-minus-circle"></i>
      </button>
    </span>
  </span>
{{/if}}
